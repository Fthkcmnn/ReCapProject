@model MVC.Areas.Admin.Models.AdminRentals.AdminRantalViewModel

@{
    ViewData["Title"] = "Rental";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h1>Rental</h1>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Car Brand Name</th>
                        <th>Car Model Name</th>
                        <th>Price</th>
                        <th>Rent Date</th>
                        <th>Return Date</th>
                        <th>Customer Name</th>
                        <th>User Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Rental)
                    {
                        <tr>
                            <td>@item.CarBrandName</td>
                            <td>@item.CarModelName</td>
                            <td>@item.Price</td>
                            <td>@item.RentDate</td>
                            <td>@item.ReturnDate</td>
                            <td>@item.UserFirstName @item.UserLastName</td>
                            <td>@item.UserEmail</td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
