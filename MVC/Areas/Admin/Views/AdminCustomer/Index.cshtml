@model MVC.Areas.Admin.Models.AdminCustomerModels.AdminCustomerIndexViewModel

@{
    ViewData["Title"] = "Customer";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h1>Customer</h1>
<div class="card">
    <div class="card-body">
        <p>
            <a asp-action="Add" class="btn btn-primary">Ekle</a>
        </p>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Customer.Data.First().FirstName)</th>
                        <th>@Html.DisplayNameFor(model => model.Customer.Data.First().LastName)</th>
                        <th>@Html.DisplayNameFor(model => model.Customer.Data.First().Phone)</th>
                        <th>@Html.DisplayNameFor(model => model.Customer.Data.First().Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Customer.Data.First().Adress)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Customer.Data)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Adress)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CustomerID" class="btn btn-sm btn-primary">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.CustomerID" class="btn btn-sm btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
