@model MVC.Areas.Admin.Models.AdminUserModels.AdminUserAddViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h1>Add</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.Data.FirstName" class="control-label"></label>
                <input asp-for="User.Data.FirstName" class="form-control" />
                <span asp-validation-for="User.Data.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Data.LastName" class="control-label"></label>
                <input asp-for="User.Data.LastName" class="form-control" />
                <span asp-validation-for="User.Data.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Data.Email" class="control-label"></label>
                <input asp-for="User.Data.Email" class="form-control" />
                <span asp-validation-for="User.Data.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Data.Phone" class="control-label"></label>
                <input asp-for="User.Data.Phone" class="form-control" />
                <span asp-validation-for="User.Data.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Data.PasswordSalt" class="control-label"></label>
                <input asp-for="User.Data.PasswordSalt" class="form-control" />
                <span asp-validation-for="User.Data.PasswordSalt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Data.PasswordHash" class="control-label"></label>
                <input asp-for="User.Data.PasswordHash" class="form-control" />
                <span asp-validation-for="User.Data.PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>
