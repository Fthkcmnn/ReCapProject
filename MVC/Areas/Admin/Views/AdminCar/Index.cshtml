@model IEnumerable<Entities.DTOs.CarDetailDTOs>

@{
    ViewData["Title"] = "Car";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h1>Car</h1>

<div class="card">
    <div class="card-body">
        <p>
            <a asp-action="Add" class="btn btn-primary">Ekle</a>
        </p>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Car ID</th>
                        <th>Brand Name</th>
                        <th>Model Name</th>
                        <th>Color Name</th>
                        <th>Model Year</th>
                        <th>Mileage</th>
                        <th>Transmission</th>
                        <th>Per Hour Rate</th>
                        <th>Per Day Rate</th>
                        <th>Per Week Rate</th>
                        <th>Per Month Rate</th>
                        <th>Surcharge</th>
                        <th>Seats</th>
                        <th>Luggage</th>
                        <th>Fuel</th>
                        <th>Image Path</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var carDetail in Model)
                    {
                        <tr>
                            <td>@carDetail.CarID</td>
                            <td>@carDetail.BrandName</td>
                            <td>@carDetail.ModelName</td>
                            <td>@carDetail.ColorName</td>
                            <td>@carDetail.ModelYear</td>
                            <td>@carDetail.Mileage</td>
                            <td>@carDetail.Transmission</td>
                            <td>@carDetail.PerHourRate</td>
                            <td>@carDetail.PerDayRate</td>
                            <td>@carDetail.PerWeekRate</td>
                            <td>@carDetail.PerMounthRate</td>
                            <td>@carDetail.Surcharge</td>
                            <td>@carDetail.Seats</td>
                            <td>@carDetail.Luggage</td>
                            <td>@carDetail.Fuel</td>
                            <td>@carDetail.ImagePath</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@carDetail.CarID" class="btn btn-sm btn-primary">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@carDetail.CarID" class="btn btn-sm btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
