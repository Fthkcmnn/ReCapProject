@model IEnumerable<Entities.DTOs.CarDetailDTOs>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">TEKLİFİMİZ</span>
                <h2 class="mb-2">
                    Öne Çıkan Araçlar
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">
                    @foreach (var car in Model)
                    {
                        <div class="item">
                            <div class="car-wrap rounded ftco-animate">
                                <div class="img rounded d-flex align-items-end" style="background-image: url('@car.ImagePath');">
                                </div>
                                <div class="text">
                                    <h2 class="mb-0"><a asp-controller="Car" asp-action="Details" asp-route-id="@car.CarID">@car.ModelName</a></h2>
                                    <div class="d-flex mb-3">
                                        <span class="cat">@car.BrandName</span>
                                        <p class="price ml-auto">
                                            @string.Format("{0:0.00}", @car.PerDayRate)₺<span>/Günlük</span>
                                        </p>
                                    </div>
                                    <p class="d-flex mb-0 d-block">
                                        <a asp-controller="Car" asp-action="Details" asp-route-id="@car.CarID" class="btn btn-primary py-2 mr-1">Rezarvasyon</a>
                                        <a asp-controller="Car" asp-action="Detay" asp-route-id="@car.CarID" class="btn btn-secondary py-2 ml-1">İncele</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
