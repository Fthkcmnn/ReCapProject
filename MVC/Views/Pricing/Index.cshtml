@model MVC.Models.PricingModels.PricingIndexViewModel
@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Fiyatlandıırma <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Fiyatlandırma</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="car-list">
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                                <th class="bg-primary heading">Saatlik Ücret</th>
                                <th class="bg-dark heading">Günlük Ücret</th>
                                <th class="bg-black heading">Aylık Ücret</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var car in Model.CarDetails)
                            {
                                <tr class="">
                                    <td class="car-image">
                                        <div class="img" style="background-image:url(@car.ImagePath);"></div>
                                    </td>
                                    <td class="product-name">
                                        <h3>@car.BrandName @car.ModelName</h3>
                                        @* <p class="mb-0 rated">
                                    <span>puan:</span>
                                    @for (int i = 0; i < 5; i++)
                                    {
                                    <span class="ion-ios-star"></span>
                                    }
                                    </p> *@
                                    </td>
                                    <td class="price">
                                        <p class="btn-custom">
                                            <a asp-controller="Car" asp-action="Details" asp-route-id="@car.CarID" class="btn btn-primary py-2 mr-1">Rezarvasyon</a>
                                        </p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num">@string.Format("{0:0}", @car.PerHourRate)<small class="currency">₺</small></span>
                                                <span class="per">/Saatlik Ücret</span>
                                            </h3>
                                            <span class="subheading">@string.Format("{0:0}", @car.Surcharge)<small class="currency">₺</small>/Saatlik Ek Ücret</span>
                                        </div>
                                    </td>
                                    <td class="price">

                                        <p class="btn-custom">
                                            <a asp-controller="Car" asp-action="Details" asp-route-id="@car.CarID" class="btn btn-primary py-2 mr-1">Rezarvasyon</a>
                                            </p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num">@string.Format("{0:0}", @car.PerDayRate)<small class="currency">₺</small></span>
                                                <span class="per">/Günlük Ücret</span>
                                            </h3>
                                            <span class="subheading">@string.Format("{0:0}", @car.Surcharge)<small class="currency">₺</small>/Saatlik Ek Ücret</span>
                                        </div>
                                    </td>
                                    <td class="price">

                                        <p class="btn-custom">
                                            <a asp-controller="Car" asp-action="Details" asp-route-id="@car.CarID" class="btn btn-primary py-2 mr-1">Rezarvasyon</a>
                                            </p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num">@string.Format("{0:0}", @car.PerMounthRate)<small class="currency">₺</small></span>
                                                <span class="per">/Aylık Ücret</span>
                                            </h3>
                                            <span class="subheading">@string.Format("{0:0}", @car.Surcharge)<small class="currency">₺</small>/Saatlik Ek Ücret</span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>